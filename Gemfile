source 'https://rubygems.org'

ruby '2.3.6'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.7'

# Use PostgreSQL as the database for Active Record
gem 'pg','~> 0.18'

# Nested Forms
gem 'cocoon'

#Heroku
gem 'figaro'

# Geração de PDF
gem 'prawn'
gem 'prawn-table'

# Autenticação e controle de perfil de acesso
gem 'devise'
gem 'cancancan'

# Responders
gem 'responders'

# Usar SCSS no projeto
gem 'sass', '~> 3.4', '>= 3.4.21'
gem 'sass-rails', '~> 5.0'

# Framework CSS
gem 'bootstrap-sass', '~> 3.3.6'
gem 'bootswatch-rails'
gem 'momentjs-rails', '>= 2.9.0'
gem 'bootstrap3-datetimepicker-rails', '~> 4.14.30'

# Usar Slim no projeto
gem 'slim', '~> 3.0', '>= 3.0.6'
gem 'slim-rails', '~> 3.0', '>= 3.0.1'

# Javascript, Json, JQuery e Coffee
gem 'coffee-rails', '~> 4.1.0'
gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 2.0'
gem 'json'

# Markdown Parser
gem 'redcarpet'

# Gerador de aleatoriedades
gem 'faker'

